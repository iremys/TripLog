<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ScrollView
        android:id="@+id/svInoutWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--스크롤뷰 때문에 사용-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/llExitIDYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="150dp"
                >

                <TextView
                    android:id="@+id/tvUserID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/input_font_size"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/btnGoTripList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여행리스트로 이동"
                    />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llExitIDNoㅁ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="450dp"
                >


                <EditText
                    android:id="@+id/etUserIDㅁ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="@dimen/input_font_size"
                    android:hint="쿼리입력"
                    />

                <Button
                    android:id="@+id/btnJoinㅁ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="쿼리적용"

                    />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/llExitIDNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="450dp"
                >


                <EditText
                    android:id="@+id/etUserID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="@dimen/input_font_size"
                    android:hint="사용할 아이디를 입력하세요"
                    />

                <Button
                    android:id="@+id/btnJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원가입"

                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>